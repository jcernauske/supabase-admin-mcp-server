# Supabase Configuration
SUPABASE_URL="https://your-project-ref.supabase.co"
SUPABASE_SERVICE_KEY="your-service-role-key-here"

# Environment Configuration
ENVIRONMENT="development"  # Options: development, staging, production

# Additional Security Layer (Optional but Recommended)
ADMIN_API_KEY="your-secure-admin-key-here"  # Generate a secure random key

# Security Settings
REQUIRE_CONFIRMATION="true"  # Require confirmation for destructive operations in production

# Optional: Direct PostgreSQL connection for advanced operations
DATABASE_URL="postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres"

# Logging Configuration
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR

# Rate Limiting (for future implementation)
MAX_OPERATIONS_PER_MINUTE="30"
